<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>PDF Automatico</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>

    <%- include("partials/head") %>
</head>

<body>

    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <div class="card">
                    <div class="card-body">
                        <form action="/export/pdf" method="POST">


                            <div class="form-group">
                                <input type="text" name="name" placeholder="Nombre" class="form-control">
                            </div>

                            <div class="form-group">
                                <input type="number" name="invoice_id" placeholder="# de Factura" class="form-control">
                            </div>

                            <div class="form-group">
                                <input type="text" name="name_product" placeholder="Nombre de producto" class="form-control">
                            </div>

                            <div class="form-group">
                                <input type="number" name="price" placeholder="Precio" class="form-control">
                            </div>

                            <div class="form-group">
                                <input type="text" name="description_product" placeholder="Description de producto" class="form-control">
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-success btn-block">Generar Factura</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

</html>